{{ 'section-testimonial-slider.css' | asset_url | stylesheet_tag }}
<script src="{{ 'global.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: 0px;
    padding-bottom: 0px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: 0px;
      padding-bottom: 0px;
    }
  }
{%- endstyle -%}

<div class="page-width">
  <div class="color-{{ section.settings.color_scheme }} gradient">
    <div class="testimonial-slider section-{{ section.id }}-padding">
      <div class="testimonial-slider__grid">
        <!-- First Column: Heading and Star Rating -->
        <div class="testimonial-slider__content">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'heading' %}
                <h2
                  class="testimonial-slider__heading inline-richtext {{ block.settings.heading_size }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading }}
                </h2>
              {% when 'star_rating' %}
                <div class="testimonial-slider__rating" {{ block.shopify_attributes }}>
                  <div class="star-rating">
                    {% assign rating = block.settings.rating | plus: 0.0 %}
                    {% assign full_stars = rating | floor %}
                    {% assign decimal_part = rating | modulo: 1 %}
                    {% assign has_half_star = false %}
                    {% if decimal_part >= 0.5 %}
                      {% assign has_half_star = true %}
                    {% endif %}

                    <!-- Full stars -->
                    {% for i in (1..full_stars) %}
                      <span class="star star--full">★</span>
                    {% endfor %}

                    <!-- Half star -->
                    {% if has_half_star %}
                      <span class="star star--half">★</span>
                    {% endif %}

                    <!-- Empty stars -->
                    {% assign empty_stars = 5 | minus: full_stars %}
                    {% if has_half_star %}
                      {% assign empty_stars = empty_stars | minus: 1 %}
                    {% endif %}
                    {% for i in (1..empty_stars) %}
                      <span class="star star--empty">☆</span>
                    {% endfor %}
                  </div>
                  <span class="rating-text">{{ rating }}/5.0</span>
                </div>
            {% endcase %}
          {% endfor %}
        </div>

        <!-- Second Column: Image -->
        <div class="testimonial-slider__image">
          {% if section.settings.image != blank %}
            {%- assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio -%}
            {{
              section.settings.image
              | image_url: width: 600
              | image_tag:
                loading: 'lazy',
                width: section.settings.image.width,
                height: image_height,
                class: 'testimonial-slider__img'
            }}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg testimonial-slider__img' }}
          {% endif %}
        </div>

        <!-- Third Column: Testimonial Slider -->
        <div class="testimonial-slider__testimonials">
          {% assign testimonials = section.blocks | where: 'type', 'testimonial' %}
          {% assign show_slider = false %}
          {% if testimonials.size > 1 %}
            {% assign show_slider = true %}
          {% endif %}

          <slider-component class="slider-mobile-gutter{% if show_slider %} slider-component-desktop{% endif %}">
            <ul
              id="Slider-{{ section.id }}"
              data-id="{{ section.id }}"
              class="grid product-grid contains-card grid--1-col-desktop grid--1-col-tablet-down{% if show_slider %} slider slider--desktop slider--tablet{% endif %}"
              role="list"
              aria-label="Testimonials"
            >
              {% for block in testimonials %}
                <li
                  id="Slide-{{ section.id }}-{{ forloop.index }}"
                  class="grid__item{% if show_slider %} slider__slide{% endif %}"
                  {{ block.shopify_attributes }}
                >
                  <div class="testimonial-card">
                    {% if block.settings.testimonial_heading != blank %}
                      <h3 class="testimonial-card__heading">{{ block.settings.testimonial_heading }}</h3>
                    {% endif %}
                    {% if block.settings.testimonial_text != blank %}
                      <div class="testimonial-card__text">
                        {{ block.settings.testimonial_text }}
                      </div>
                    {% endif %}
                  </div>
                </li>
              {% endfor %}
            </ul>

            {% if show_slider %}
              <div class="slider-buttons no-js-hidden quick-add-hidden">
                <button
                  type="button"
                  class="slider-button slider-button--prev"
                  name="previous"
                  aria-label="Previous testimonial"
                  aria-controls="Slider-{{ section.id }}"
                >
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </button>
                <button
                  type="button"
                  class="slider-button slider-button--next"
                  name="next"
                  aria-label="Next testimonial"
                  aria-controls="Slider-{{ section.id }}"
                >
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </button>
              </div>
            {% endif %}
          </slider-component>
        </div>
      </div>
    </div>
  </div>
</div>

